              </div>

	      <span> <img src="siscop//static/img/logounl.jpg"/><h1> Universidad Nacional de Loja </h1> </span>
              <h2 t-if="o.state != 'draft'">Purchase Order Confirmation N°<span t-field="o.name"/></h2>
              <h2 t-if="o.state == 'draft'">Request for Quotation N°<span t-field="o.name"/></h2>

	      <h3 t-if="o.requester and  o.requester.department_id"> 
		<span t-field="o.requester.department_id.name"/> 
	      </h3>

              <!-- <div class="row mt32 mb32"> -->
              <div class="form-horizontal">

                <div t-if="o.date_order" class="form-group">
                  <strong class="col-xs-2">Order Date:</strong>
                  <span class="col-xs-3" t-field="o.date_order"/>
                </div>
                <div class="form-group">
                  <strong class="col-xs-2">Requested By:</strong>
                  <span class="col-xs-3" t-if="o.requester" t-field="o.requester"/>
                </div>
                <div class="form-group">
                  <strong class="col-xs-2">Project:</strong>
                  <span class="col-xs-3" t-field="o.purchase_project"/>
                </div>
                <div class="form-group">
                  <strong class="col-xs-2">Item Budget:</strong>
                  <span class="col-xs-2" t-field="o.item_budget_id.name"/>
                </div>
                <div class="form-group">
                  <strong class="col-xs-2">Item Budget Code:</strong>
                  <span class="col-xs-2" t-field="o.item_budget_id.code"/>
                </div>
                <div class="form-group">
                  <strong class="col-xs-2">Balance:</strong>
                  <span class="col-xs-2" t-field="o.item_budget_id.balance"/>
                </div>
                <div class="form-group">
                  <strong class="col-xs-2">Approver:</strong>
                  <span class="col-xs-2" t-if="o.approver" t-field="o.approver"/>
                </div>
                <!-- <div t-if="o.name" class="col-xs-3"> -->
                <!--   <strong>Our Order Reference:</strong> -->
                <!--   <p t-field="o.name"/> -->
                <!-- </div> -->

              </div>

              <table class="table table-bordered table-condensed border">
                <thead>
                  <tr>
                    <th><strong>Item</strong></th>
                    <th><strong>CPC</strong></th>
                    <th><strong>Description</strong></th>
                    <th class="text-right"><strong>Unit of Measure</strong></th>
                    <th class="text-right"><strong>Qty</strong></th>
                    <th class="text-right"><strong>Unit Price</strong></th>
                    <th class="text-right"><strong>Subtotal</strong></th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="o.order_line" t-as="line">
                    <td>
                      <span t-field="line.sequence"/>
                    </td>
                    <td>
                      <span t-field="line.product_id.code"/>
                    </td>
                    <td>
                      <span t-field="line.product_id.name"/>
                    </td>
                    <td class="text-right">
                      <span t-field="line.product_uom.name" groups="product.group_uom"/>
		    </td>
                    <td class="text-right">
                      <span t-field="line.product_qty"/>
                    </td>
                    <td class="text-right">
                      <span t-field="line.price_unit"/>
                    </td>
                    <td class="text-right">
                      <span t-field="line.price_subtotal"
                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                    </td>
                  </tr>
                </tbody>
              </table>

              <div class="row">
                <div class="col-xs-4 pull-right">
                  <table class="table table-condensed">
                    <!-- <tr class="border-black"> -->
                    <!--   <td><strong>Total Without Taxes</strong></td> -->
                    <!--   <td class="text-right"> -->
                    <!--     <span t-field="o.amount_untaxed" -->
                    <!--           t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/> -->
                    <!--   </td> -->
                    <!-- </tr> -->
                    <!-- <tr> -->
                    <!--   <td>Taxes</td> -->
                    <!--   <td class="text-right"> -->
                    <!--     <span t-field="o.amount_tax" -->
                    <!--           t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/> -->
                    <!--   </td> -->
                    <!-- </tr> -->
                    <tr class="border-black">
                      <td><strong>Total</strong></td>
                      <td class="text-right">
                        <span t-field="o.amount_total"
                              t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
              <span> <strong> Terms and Conditions:</strong> </span>
              <p t-field="o.notes"/>
              <div class="oe_structure"/>
	      <div> 		<!--	TODO: Trying signatures -->
		<table class="table table-bordered table-condensed border">
		  <thead>
		  <tr>
		    <th style="text-align: center;"> REQUESTED BY </th>
		    <th style="text-align: center;"> APPROVED BY </th>
		  </tr>
		  </thead>
		  <tbody>
		    <tr>
		      <td style="text-align: center; valign: bottom; height: 100px;">
			____________________  <br/>
			<span t-if="o.requester" t-field="o.requester.name"/> <br/>
			<span t-if="o.requester" t-field="o.requester.job_id.name"/>
		      </td>
		      <td style="text-align: center; valign: bottom; height: 100px;">
			_____________________  <br/>
			<span t-if="o.approver" t-field="o.approver.name"/> <br/>
			<span t-if="o.approver" t-field="o.approver.job_id.name"/>
		      </td>
		    </tr>
		  </tbody>
		</table>
	      </div>
            </div>

